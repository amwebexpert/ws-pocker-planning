{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "esnext"],
        "module": "commonjs",
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "rootDir": "./src",
        "noEmitOnError": true,
        "declarationDir": "./dist",
        "outDir": "./dist",
        "typeRoots": ["node_modules/@types", "@types"]
    }
}
